<body unresolved class="fullbleed layout vertical">
  <span id="browser-sync-binding"></span>
    <script type="text/javascript">
      var bitcore    = require('bitcore-lib');
      var privateKey = new bitcore.PrivateKey();
    </script>

<!--     <paper-drawer-panel id="paperDrawerPanel"> -->
<!--       <paper-scroll-header-panel drawer fixed> -->

        <!-- Main Toolbar -->
        <paper-toolbar id="mainToolbar">
        <div>VIP IDENTIFIER</div>
        </paper-toolbar>




<!--       </paper-scroll-header-panel>         -->
<!--     </paper-drawer-panel> -->
    <template is='dom-bind'>

      <iron-media-query query="(max-width: 768px)" query-matches="{{smallScreen}}"></iron-media-query>
      <iron-media-query query="(min-width: 768px)" query-matches="{{regularScreen}}"></iron-media-query>
      <template is="dom-if" if="{{smallScreen}}">
        <paper-input-container style='padding-left:10px;'>
          <label style='font-size: 11px;'>Enter mnemonic, '206 teddy bears' for instance, then hit return.</label>
          <input  is="iron-input" value="{{phrase::change}}">
        </paper-input-container>
        <vip-id style ='padding-left:0px 0px 0px 0px;' phrase="{{phrase}}"></vip-id>
      </template>

      <template is="dom-if" if="{{regularScreen}}">
        <paper-input-container style='width: 90%; padding-left:20px;'>
          <label style='font-size: 24px;'>Enter mnemonic, '206 teddy bears' for instance, then hit return.</label>
          <input  is="iron-input" value="{{phrase::change}}">
        </paper-input-container>
        <vip-id phrase="{{phrase}}"></vip-id>
      </template>
    </template>


